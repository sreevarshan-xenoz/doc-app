<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="DoctorAppointmentSystem.PatientProfileController"
            style="-fx-background-color: #f5f5f5;">
    
    <!-- Header -->
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #4285f4; -fx-padding: 15;">
            <HBox alignment="CENTER">
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <Label text="Doctor Appointment Management System" style="-fx-text-fill: white; -fx-font-weight: bold;">
                        <font>
                            <Font size="20"/>
                        </font>
                    </Label>
                </HBox>
                <Button fx:id="backButton" text="Back" onAction="#handleBackButton"
                        style="-fx-background-color: #ea4335; -fx-text-fill: white;" />
            </HBox>
            <HBox alignment="CENTER">
                <Label text="Patient Profile" style="-fx-text-fill: white;">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" text="Welcome, User" style="-fx-text-fill: white;" />
            </HBox>
        </VBox>
    </top>
    
    <!-- Patient Profile Form -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 20;">
                <!-- Personal Information -->
                <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Label text="Personal Information" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>
                    
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="150" />
                            <ColumnConstraints minWidth="250" />
                        </columnConstraints>
                        
                        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="fullNameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Date of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <DatePicker fx:id="dobPicker" promptText="Select date of birth" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <ComboBox fx:id="genderComboBox" promptText="Select gender" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Blood Group:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <ComboBox fx:id="bloodGroupComboBox" promptText="Select blood group" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </GridPane>
                </VBox>
                
                <!-- Contact Information -->
                <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Label text="Contact Information" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>
                    
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="150" />
                            <ColumnConstraints minWidth="250" />
                        </columnConstraints>
                        
                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="emailField" promptText="Enter email address" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="phoneField" promptText="Enter phone number" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.valignment="TOP" />
                        <TextArea fx:id="addressField" promptText="Enter address" prefRowCount="3" wrapText="true" 
                                  GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Emergency Contact:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="emergencyContactField" promptText="Name and phone number" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </GridPane>
                </VBox>
                
                <!-- Medical Information -->
                <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Label text="Medical Information" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>
                    
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="150" />
                            <ColumnConstraints minWidth="250" />
                        </columnConstraints>
                        
                        <Label text="Height (cm):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="heightField" promptText="Enter height in cm" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Weight (kg):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="weightField" promptText="Enter weight in kg" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Allergies:" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.valignment="TOP" />
                        <TextArea fx:id="allergiesField" promptText="List any allergies" prefRowCount="2" wrapText="true" 
                                  GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Current Medications:" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="TOP" />
                        <TextArea fx:id="medicationsField" promptText="List current medications" prefRowCount="2" wrapText="true" 
                                  GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label text="Medical History:" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.valignment="TOP" />
                        <TextArea fx:id="medicalHistoryField" promptText="Enter medical history" prefRowCount="3" wrapText="true" 
                                  GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </GridPane>
                </VBox>
                
                <!-- Insurance Information -->
                <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Label text="Insurance Information" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>
                    
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="150" />
                            <ColumnConstraints minWidth="250" />
                        </columnConstraints>
                        
                        <Label text="Insurance Provider:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="insuranceProviderField" promptText="Enter provider name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Policy Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="policyNumberField" promptText="Enter policy number" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </GridPane>
                </VBox>
                
                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="saveButton" text="Save Profile" onAction="#handleSaveButton"
                            style="-fx-background-color: #4285f4; -fx-text-fill: white;" prefWidth="200" />
                            
                    <Button fx:id="clearButton" text="Clear Form" onAction="#handleClearButton"
                            style="-fx-background-color: #757575; -fx-text-fill: white;" prefWidth="200" />
                </HBox>
                
                <Label fx:id="statusLabel" style="-fx-text-fill: #4caf50;" wrapText="true" alignment="CENTER" />
            </VBox>
        </ScrollPane>
    </center>
    
    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #eeeeee;">
            <Label text="© 2023 Doctor Appointment System - Connected to Supabase" style="-fx-text-fill: #757575;" />
        </HBox>
    </bottom>
    
</BorderPane> 