<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="DoctorAppointmentSystem.DashboardController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f5f5f5;">
    
    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: #4285f4; -fx-padding: 15;">
            <HBox alignment="CENTER">
                <Label text="Doctor Appointment Management System" style="-fx-text-fill: white; -fx-font-weight: bold;">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #ea4335; -fx-text-fill: white;" />
            </HBox>
            <HBox alignment="CENTER">
                <Label text="Dashboard" style="-fx-text-fill: white;">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" text="Welcome, User" style="-fx-text-fill: white;" />
            </HBox>
        </VBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- Actions Panel -->
            <HBox spacing="20" alignment="CENTER">
                <VBox alignment="CENTER" style="-fx-padding: 15; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Button fx:id="createAppointmentButton" text="Book New Appointment" 
                            onAction="#handleCreateAppointment"
                            style="-fx-background-color: #4285f4; -fx-text-fill: white;"
                            prefWidth="200" prefHeight="50">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Button>
                </VBox>
                
                <VBox alignment="CENTER" style="-fx-padding: 15; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Button fx:id="manageProfileButton" text="Manage Patient Profile" 
                            onAction="#handleManageProfile"
                            style="-fx-background-color: #0f9d58; -fx-text-fill: white;"
                            prefWidth="200" prefHeight="50">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Button>
                </VBox>
                
                <VBox alignment="CENTER" style="-fx-padding: 15; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Button fx:id="viewCalendarButton" text="View Calendar" 
                            onAction="#handleViewCalendar"
                            style="-fx-background-color: #fbbc05; -fx-text-fill: white;"
                            prefWidth="200" prefHeight="50">
                        <font>
                            <Font size="14"/>
                        </font>
                    </Button>
                </VBox>
            </HBox>
            
            <!-- Status Panel -->
            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <Label text="System Status" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="16"/>
                    </font>
                </Label>
                <HBox spacing="15">
                    <Label text="Database Connection:" />
                    <Label fx:id="dbStatusLabel" text="Connected" style="-fx-text-fill: #0f9d58;" />
                </HBox>
                <HBox spacing="15">
                    <Label text="User Role:" />
                    <Label fx:id="userRoleLabel" text="Patient" />
                </HBox>
                <HBox spacing="15">
                    <Label text="Last Login:" />
                    <Label fx:id="lastLoginLabel" text="Today" />
                </HBox>
            </VBox>
            
            <!-- Appointments List -->
            <VBox VBox.vgrow="ALWAYS" style="-fx-padding: 15; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <Label text="Your Appointments" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="16"/>
                    </font>
                </Label>
                
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0;">
                    <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh"
                            style="-fx-background-color: #4285f4; -fx-text-fill: white;" />
                    
                    <Region HBox.hgrow="ALWAYS" />
                    
                    <Label text="Filter by:" />
                    <ComboBox fx:id="filterComboBox" promptText="All Appointments" prefWidth="150"
                              onAction="#handleFilterChange" />
                </HBox>
                
                <TableView fx:id="appointmentsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="patientColumn" text="Patient Name" prefWidth="120"/>
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                        <TableColumn fx:id="timeColumn" text="Time" prefWidth="80"/>
                        <TableColumn fx:id="doctorColumn" text="Doctor" prefWidth="120"/>
                        <TableColumn fx:id="departmentColumn" text="Department" prefWidth="100"/>
                        <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="80"/>
                    </columns>
                </TableView>
                
                <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="viewDetailsButton" text="View Details" onAction="#handleViewDetails"
                            style="-fx-background-color: #4285f4; -fx-text-fill: white;" />
                    
                    <Button fx:id="cancelAppointmentButton" text="Cancel Appointment" onAction="#handleCancelAppointment"
                            style="-fx-background-color: #ea4335; -fx-text-fill: white;" />
                </HBox>
            </VBox>
        </VBox>
    </center>
    
    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #eeeeee;">
            <Label text="Â© 2023 Doctor Appointment System - Connected to Supabase" style="-fx-text-fill: #757575;" />
        </HBox>
    </bottom>
    
</BorderPane> 