<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="DoctorAppointmentSystem.PatientFormController"
            style="-fx-background-color: #f5f5f5;">
    
    <!-- Header -->
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #4285f4; -fx-padding: 15;">
            <HBox alignment="CENTER">
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <Label text="Doctor Appointment Management System" style="-fx-text-fill: white; -fx-font-weight: bold;">
                        <font>
                            <Font size="20"/>
                        </font>
                    </Label>
                </HBox>
                <Button fx:id="backButton" text="Back" onAction="#handleBackButton"
                        style="-fx-background-color: #ea4335; -fx-text-fill: white;" />
            </HBox>
            <HBox alignment="CENTER">
                <Label text="Patient Information Form" style="-fx-text-fill: white;">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" text="Welcome, User" style="-fx-text-fill: white;" />
            </HBox>
        </VBox>
    </top>
    
    <!-- Patient Form -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 20;">
                <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Label text="Personal Information" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>
                    
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="150" />
                            <ColumnConstraints minWidth="250" />
                        </columnConstraints>
                        
                        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="fullNameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="ageField" promptText="Enter age" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <ComboBox fx:id="genderComboBox" promptText="Select gender" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="contactNumberField" promptText="Enter contact number" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label text="Email Address:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <TextField fx:id="emailField" promptText="Enter email address" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </GridPane>
                </VBox>
                
                <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Label text="Medical History" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="16"/>
                        </font>
                    </Label>
                    
                    <Label text="Please provide any relevant medical history information:" />
                    <TextArea fx:id="medicalHistoryArea" promptText="Enter medical history details" prefRowCount="5" wrapText="true" />
                </VBox>
                
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="saveButton" text="Save Information" onAction="#handleSaveButton"
                            style="-fx-background-color: #4285f4; -fx-text-fill: white;" prefWidth="200" />
                            
                    <Button fx:id="clearButton" text="Clear Form" onAction="#handleClearButton"
                            style="-fx-background-color: #757575; -fx-text-fill: white;" prefWidth="200" />
                </HBox>
                
                <Label fx:id="statusLabel" style="-fx-text-fill: #4caf50;" wrapText="true" alignment="CENTER" />
            </VBox>
        </ScrollPane>
    </center>
    
    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #eeeeee;">
            <Label text="Â© 2023 Doctor Appointment System - Connected to Supabase" style="-fx-text-fill: #757575;" />
        </HBox>
    </bottom>
    
</BorderPane> 