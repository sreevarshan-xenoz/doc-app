<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="DoctorAppointmentSystem.VerificationController"
      alignment="CENTER" 
      spacing="20" 
      style="-fx-background-color: #f5f5f5;">
      
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    
    <Label text="Doctor Appointment System" style="-fx-font-weight: bold;">
        <font>
            <Font size="24"/>
        </font>
    </Label>
    
    <Label text="Email Verification" style="-fx-font-style: italic;">
        <font>
            <Font size="16"/>
        </font>
    </Label>
    
    <Label text="Please enter the 6-digit verification code sent to your email" wrapText="true" textAlignment="CENTER" />
    
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="otpField" promptText="Enter 6-digit code" maxWidth="200" alignment="CENTER" />
    </HBox>
    
    <Label fx:id="timerLabel" text="Expires in: 05:00" style="-fx-font-size: 12;" />
    
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="verifyButton" text="Verify" onAction="#handleVerifyButton" 
                style="-fx-background-color: #4285f4; -fx-text-fill: white;"
                prefWidth="120"/>
                
        <Button fx:id="resendButton" text="Resend Code" onAction="#handleResendButton"
                style="-fx-background-color: #ea4335; -fx-text-fill: white;"
                prefWidth="120"/>
    </HBox>
    
    <Button fx:id="backToLoginButton" text="Back to Login" onAction="#handleBackToLoginButton"
            style="-fx-background-color: #9e9e9e; -fx-text-fill: white;"
            prefWidth="120"/>
    
    <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
</VBox> 